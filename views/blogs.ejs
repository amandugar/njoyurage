<%- include("partials/header") %>
<%- include("partials/navbar") %>

<div class="container blogPage">
    <div class="centerText">
        <h1>Read the Most Exciting Blogs</h1>
    </div>
</div>
<main class="container">
    <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
      <div class="col-md-6 px-0">
        <h1 class="display-4 fst-italic"><%=feature.title%></h1>
        <p class="lead my-3"><%=feature.subTitle%></p>
        <p class="lead mb-0"><a href="/blogs/<%=feature._id%>" class="text-white fw-bold">Continue reading...</a></p>
      </div>
    </div>
  
    <div class="row mb-2">
      <% blogs.forEach(function(blog){ %>
      <div class="col-md-6 order-2">
        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
          <div class="col-md-7 p-4 d-flex flex-column position-static">
            <h2 class="mb-1"><%= blog.title%></h2>
            <div class="mb-2 text-muted"><%=blog.time.slice(4,15)%></div>
            <h5 class="pt-2 pb-3 card-text mb-auto"><%=blog.subTitle%></h5>
            <a href="/blogs/<%=blog._id%>" class="stretched-link">Continue reading</a>
          </div>
          <div class="col-md-5 order-1 blog-background" style="background-image: url('/images/uploads/<%=blog.image%>');">
            
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  
  </main>


<%- include("partials/footer") %>